<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property
    name="LOG_PATTERN"
    value="date=%d;log-level=%p;app=${appName};thread=%t;trace=%X{traceId},%X{spanId};logger=%logger;message=%m%n%xException"
  />

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
    <syslogHost>myhost</syslogHost>
    <facility>MAIL</facility>
    <port>514</port>
    <!-- include %exception in message instead of allowing default multiline stack trace -->
    <throwableExcluded>true</throwableExcluded>
    <suffixPattern>${LOG_PATTERN}</suffixPattern>
  </appender>

  <root level="debug">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="SYSLOG" />
  </root>
</configuration>